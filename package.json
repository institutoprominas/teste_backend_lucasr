{
  "name": "microservice_base",
  "version": "1.0.0",
  "description": "Base para API Rest com NodeJS, para microsservi√ßos do Instituto Prominas",
  "main": "src/app.js",
  "scripts": {
    "dev": "export NODE_ENV='development' && nodemon --exec babel-node src/app.js --use_strict",
    "dev-win": "SET NODE_ENV=development && nodemon --exec babel-node src/app.js --use_strict",
    "test": "export NODE_ENV='test' && mocha --timeout 10000 src/tests/ --compilers js:babel-core/register --recursive",
    "build": "export NODE_ENV='production' && npm run clean && babel src --ignore test.js --out-dir ./dist --copy-files",
    "clean": "rm -rf dist && mkdir dist",
    "start": "pm2 start pm2-deploy.yml",
    "stop": "pm2 stop pm2-deploy.yml",
    "restart": "pm2 restart pm2-deploy.yml",
    "build-homo": "export NODE_ENV='homologation' && npm run clean-homo && babel src --ignore test.js --out-dir ./dist-homo --copy-files",
    "clean-homo": "rm -rf dist-homo && mkdir dist-homo",
    "start-homo": "pm2 start pm2-deploy-homo.yml",
    "stop-homo": "pm2 stop pm2-deploy-homo.yml",
    "restart-homo": "pm2 restart pm2-deploy-homo.yml",
    "start-docker": "sudo docker-compose up -d ; sudo docker ps",
    "stop-docker": "sudo docker-compose stop",
    "update": "sh update.sh"
  },
  "author": "Instituto Prominas <desenvolvimento@institutoprominas.com.br>",
  "license": "CC",
  "devDependencies": {
    "assert": "^1.4.1",
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-minify": "0.2.0",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "eslint": "^4.0.0-rc.0",
    "eslint-plugin-promise": "^3.8.0",
    "mocha": "^3.4.2",
    "nodemon": "^1.18.3"
  },
  "dependencies": {
    "acl": "^0.4.11",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "express": "^4.15.3",
    "helmet": "^3.13.0",
    "http-status-codes": "^1.3.0",
    "joi": "^10.5.2",
    "joi-i18n": "^13.1.2",
    "lodash": "^4.17.5",
    "moment": "^2.24.0",
    "mongoose": "^5.3.13",
    "mongoose-beautiful-unique-validation": "^7.1.1",
    "morgan": "^1.9.0",
    "mysql2": "^1.4.2",
    "node-cron": "^2.0.3",
    "nodemailer": "^4.7.0",
    "pg": "^6.1.0",
    "pg-hstore": "^2.3.2",
    "request": "^2.87.0",
    "request-promise": "^4.2.1",
    "sequelize": "^4.38.0"
  }
}
